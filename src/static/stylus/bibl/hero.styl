.hero__title
  display flex
  justify-content: space-between
  align-items: flex-start
  & > h1
    font-size: 47.3392px;
    line-height: 59px;
    color #070707;
    width 130px
    margin-top 30px
    margin-bottom 0
  & > p
    font-size $fontsSize
    line-height: $lineHeight
    width 156px
    margin-top 94px
    margin-bottom 0
  &__lang
    margin-right -20px
    margin-top 93px
    &__btn
      border none
      background-color $white
      font-size: 16px;
      line-height: 20px;
      font-family: $fontFamily
      outline: none
      text-transform: uppercase
      padding 0
      color $grey1
      font-weight bold
      cursor pointer
      &:hover
        color $black
        font-weight bold
      &:first-child
        border-right: 1.5px solid black
        padding-right 5px
.hero__footer-img
  margin-top 30px
